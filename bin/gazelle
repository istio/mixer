#!/bin/bash

set -ex

# Remove the symbolic link of generated pb.go files and .gen.go files
# to prevent gazelle from creating wrong go_proto_library.
find . -type l \( -name '*.pb.go' -o -name '*.gen.go' \) | xargs rm -f

bazel run //:gazelle

if [[ "$OSTYPE" == "darwin"* ]]; then
  params=(-i "")
else
  params=(-i)
fi
